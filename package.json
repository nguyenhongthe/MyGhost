{
    "name": "myghost",
    "description": "Giao diện tối giản cho Ghost Blog",
    "version": "1.0.8",
    "date": "2024-07-03",
    "private": true,
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "changelog": {
        "url": "https://github.com/nguyenhongthe/MyGhost/blob/main/CHANGELOG.md"
    },
    "author": {
        "name": "Nguyễn Hồng Thế Blog",
        "email": "hello@nguyenhongthe.net",
        "url": "https://nguyenhongthe.net"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme",
        "myghost",
        "myghost-theme",
        "my-ghost"
    ],
    "docs": "https://github.com/nguyenhongthe/MyGhost",
    "config": {
        "posts_per_page": 10,
        "image_sizes": {
            "xs": {
                "width": 150
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 720
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1200
            },
            "xxl": {
                "width": 2000
            }
        },
        "card_assets": true,
        "custom": {
            "navigation_layout": {
                "type": "select",
                "options": [
                    "Logo on the left",
                    "Logo in the middle",
                    "Stacked"
                ],
                "default": "Stacked"
            },
            "title_font": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif",
                    "Fancy script",
                    "Roboto"
                ],
                "default": "Modern sans-serif"
            },
            "body_font": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif",
                    "Fancy script",
                    "Roboto"
                ],
                "default": "Modern sans-serif"
            },
            "github": {
                "type": "text",
                "default": "nguyenhongthe",
                "description": "Github username"
            }
        }
    },
    "scripts": {
        "dev": "gulp",
        "test": "gscan .",
        "zip": "gulp zip"
    },
    "devDependencies": {
        "@tryghost/shared-theme-assets": "^2.4.3",
        "autoprefixer": "10.4.19",
        "beeper": "2.1.0",
        "cssnano": "7.0.2",
        "gscan": "4.43.1",
        "gulp": "5.0.0",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "10.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.1.0",
        "ordered-read-streams": "^2.0.0",
        "postcss": "8.4.38",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.0"
    },
    "dependencies": {}
}
